# vim: set ft=ruby

port 9293

data_directory "/tmp/litmus_paper"

service :test do |s|
  s.depends Dependency::HTTP, "http://localhost/heartbeat"

  s.measure_health Metric::CPULoad, :weight => 50
end

service :passing_test do |s|
  s.measure_health Metric::CPULoad, :weight => 50
  s.depends Dependency::TCP, "localhost", 51322
end
